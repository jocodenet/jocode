---
// import './button.css';
import { Icon } from 'astro-icon/components';
import type { CallToAction as Props } from '~/types';

const {
  variant = 'primary',
  target,
  text = Astro.slots.render('default'),
  icon = '',
  class: className = '',
  type,
  ...rest
} = Astro.props;

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  tertiary: 'btn btn-tertiary',
  link: 'cursor-pointer hover:text-primary',
};
---

{
  type === 'button' || type === 'submit' || type === 'reset' ? (
    <button type={type} class:list={['btn', variants[variant] || '', className]} {...rest}>
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class='' />}
    </button>
  ) : (
    <a class:list={['btn', className]} {...(target ? { target: target, rel: 'noopener noreferrer' } : {})} {...rest}>
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class='' />}
    </a>
  )
}
